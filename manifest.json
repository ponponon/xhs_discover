{
  "manifest_version": 3,
  "name": "小红书帖子提取器",
  "version": "1.0.0",
  "description": "提取小红书探索页面的帖子信息",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "https://www.xiaohongshu.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.xiaohongshu.com/explore*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
